<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    android:background="#F9F9F9"
    tools:context=".SignupActivity">

    <!-- App Logo -->
    <ImageView
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_gravity="center"
        android:layout_marginTop="32dp"
        android:src="@drawable/logo"
        android:contentDescription="App Logo" />

    <!-- App Name Text -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="16dp"
        android:text="Authentication App"
        android:textSize="24sp"
        android:textStyle="bold"
        android:textColor="#333333" />

    <!-- Welcome Text -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="8dp"
        android:text="Welcome to MultiAuthentication!!"
        android:textSize="16sp"
        android:textColor="#666666"
        android:paddingTop="10dp" />

    <!-- Signup Prompt Text -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="20dp"
        android:text="Sign up using"
        android:textSize="18sp"
        android:textStyle="bold"
        android:textColor="#333333" />

    <!-- Social Media Buttons Row -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_marginTop="16dp">

        <!-- Google Sign-in -->
        <ImageView
            android:id="@+id/googlesignbtn"
            android:layout_width="64dp"
            android:layout_height="64dp"
            android:layout_margin="8dp"
            android:src="@drawable/google"
            android:contentDescription="Google Sign-in" />

        <!-- Phone Sign-in -->
        <ImageView
            android:id="@+id/phonesignupbtn"
            android:layout_width="64dp"
            android:layout_height="64dp"
            android:layout_margin="8dp"
            android:src="@drawable/telephone"
            android:contentDescription="Phone Sign-in" />

        <!-- Facebook Sign-in -->
        <ImageView
            android:id="@+id/facebooksignupbtn"
            android:layout_width="64dp"
            android:layout_height="64dp"
            android:layout_margin="8dp"
            android:src="@drawable/facebook"
            android:contentDescription="Facebook Sign-in" />

        <!-- GitHub Sign-in -->
        <ImageView
            android:id="@+id/githubsignupbtn"
            android:layout_width="64dp"
            android:layout_height="64dp"
            android:layout_margin="8dp"
            android:src="@drawable/github"
            android:contentDescription="GitHub Sign-in" />
    </LinearLayout>

    <!-- Login Redirect Text -->
    <TextView
        android:id="@+id/logintextview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="24dp"
        android:text="Already have an account? Log in"
        android:textSize="16sp"
        android:textColor="#0056b3"
        android:textStyle="italic"
        android:paddingTop="16dp"
        android:paddingBottom="32dp" />

</LinearLayout>
